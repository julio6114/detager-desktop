<?xml version="1.0" encoding="utf-8"?>
<s:Group xmlns:fx="http://ns.adobe.com/mxml/2009" 
		 xmlns:s="library://ns.adobe.com/flex/spark" 
		 xmlns:mx="library://ns.adobe.com/flex/mx" width="400" height="300">
	
	<fx:Script>
		<![CDATA[
			import com.detager.models.presentation.LinkEditorPM;
			
			[Bindable]
			[Inject]
			public var model:LinkEditorPM;

		]]>
	</fx:Script>
	
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	
	<mx:Form horizontalCenter="0" left="10" right="10">
		<mx:FormItem label="title" width="100%">
			<s:TextInput id="txtTitle" text="@{model.currentLinkEntry.title}" width="100%" />
		</mx:FormItem>
		<mx:FormItem label="url" width="100%">
			<s:TextInput id="txtUrl" text="@{model.currentLinkEntry.url}" width="100%" />
		</mx:FormItem>
	</mx:Form>
	
	<s:HGroup right="5" bottom="5">
		<s:Button id="btnNewLink" label="New Link" click="model.btnNewLink_clickHandler(event)" />
		<s:Button id="btnSaveLink" label="Save" click="model.btnSaveLink_clickHandler(event)" />
	</s:HGroup>
	
</s:Group>
